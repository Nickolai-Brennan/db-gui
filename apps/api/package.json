{
  "name": "api",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "Backend API for SQL GUI + ERD + Checklist Engine",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",

    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "echo \"add eslint later\"",

    "migrate:up": "node-pg-migrate up -d \"$APP_DATABASE_URL\" -m ../../db/migrations",
    "migrate:down": "node-pg-migrate down -d \"$APP_DATABASE_URL\" -m ../../db/migrations"
  },
  "dependencies": {
    "fastify": "^4.26.0",
    "@fastify/sensible": "^5.5.0",
    "fastify-plugin": "^4.5.0",

    "zod": "^3.23.8",
    "pg": "^8.11.5",

    "node-pg-migrate": "^7.7.0"
  },
  "devDependencies": {
    "typescript": "^5.4.0",
    "tsx": "^4.7.0",
    "@types/node": "^20.11.0",
    "@types/pg": "^8.10.9"
  }
}
